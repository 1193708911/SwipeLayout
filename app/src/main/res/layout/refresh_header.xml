<?xml version="1.0" encoding="utf-8"?>
<com.example.admin.swipelayout.refresh.HeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/head_loading_img_2" />


        <ImageView
            android:id="@+id/img_complet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/head_loading_end_img_2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="下拉刷新"
        android:textSize="10dp" />

</com.example.admin.swipelayout.refresh.HeaderLayout>